{
  "name": "my-profile",
  "version": "1.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "wrangler dev",
    "lint": "biome lint --apply-unsafe ./src",
    "format": "biome format --write ./src package.json biome.json tsconfig.json",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "prepare": "husky"
  },
  "dependencies": {
    "hono": "^4.3.6",
    "microcms-js-sdk": "^3.1.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@cloudflare/workers-types": "^4.20240512.0",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "wrangler": "^3.47.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json}": "npm run lint && npm run format"
  }
}

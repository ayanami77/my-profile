  "dependencies": {
    "hono": "^4.5.1",
    "microcms-js-sdk": "^3.1.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@cloudflare/workers-types": "^4.20240529.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@hono/vite-dev-server": "^0.13.1",
    "vite": "^5.2.12",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "wrangler": "^3.57.2"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json}": "npm run lint && npm run format"
  }
}

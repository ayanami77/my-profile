{
  "name": "my-profile",
  "type": "module",
  "version": "1.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "wrangler pages dev",
    "deploy": "$npm_execpath run build && wrangler pages deploy",
    "lint": "biome lint --write --unsafe ./src",
    "format": "biome format --write ./src package.json biome.json tsconfig.json",
    "prepare": "husky"
